<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/appChoiceTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_margin="25dp"
       android:text="@string/app_choice"/>
    <ImageView
        android:id="@+id/appChoiceImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/padrao"
        app:layout_constraintTop_toBottomOf="@id/appChoiceTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/playerResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appChoiceImageView"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/playerResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/paperChoiceImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:src="@drawable/papel" />

        <ImageView
            android:id="@+id/rockChoiceImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:src="@drawable/pedra" />

        <ImageView
            android:id="@+id/scissorsChoiceImageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:src="@drawable/tesoura" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>